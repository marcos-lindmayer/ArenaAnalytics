    <Frame name="ArenaAnalyticsScrollListItem" virtual="true">
        <Size x="0" y="28"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background" setAllPoints="true">
                    <Color r="0" g="0" b="0" a="0.2"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="Date" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="130"/>
                    <Anchors>
                        <Anchor point="LEFT"  x="24" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="Map" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="40"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Date" relativePoint="RIGHT" x="15" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="Duration" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="120"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Map" relativePoint="RIGHT" x="15" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="Rating" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="75"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Duration" relativePoint="RIGHT" x="130" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="MMR" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="70"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Rating" relativePoint="RIGHT" x="15" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="EnemyMMR" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="110"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.MMR" relativePoint="RIGHT" x="140" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="EnemyRating" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="110"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.EnemyMMR" relativePoint="RIGHT" x="15" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="HIGHLIGHT">
                <Texture parentKey="Highlight" setAllPoints="true" alphaMode="ADD">
                    <Color r="1" g="0.75" b="0" a="0.2"/>
                </Texture>
            </Layer>
            <Layer level="TOOLTIP">
                <Texture parentKey="Tooltip" setAllPoints="true" alphaMode="ADD">
                    <Color r="1" g="0.75" b="0" a="0.2"/>
                </Texture>
            </Layer>
        </Layers>

        <Scripts>
            <OnEnter>
                ArenaAnalyticsToggleSpecs(self, true)
            </OnEnter>
            <OnLeave>
                ArenaAnalyticsToggleSpecs(self, false)
            </OnLeave>
        </Scripts>
